// Allow users in the sudo group to manage snaps via ChairLift without authentication
polkit.addRule(function(action, subject) {
    if (action.id.startsWith("org.frostyard.ChairLift.snap.") &&
        subject.active == true &&
        subject.local == true &&
        subject.isInGroup("sudo")) {
            return polkit.Result.YES;
    }
    return polkit.Result.NOT_HANDLED;
});
